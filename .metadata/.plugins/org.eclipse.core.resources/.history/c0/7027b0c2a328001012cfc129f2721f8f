package com.movie.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.movie.jdbc.JdbcExecuteMethodsService;

import lombok.extern.slf4j.Slf4j;

@RestController
@RequestMapping("/movies/jdbc")
@Slf4j
public class JdbcController {

	@Autowired
	private JdbcExecuteMethodsService jdbcService;

	@GetMapping("/insertMovie")
	public ResponseEntity<String> insertMovies() {
		log.info("üé¨ [START] /insertMovie endpoint hit - initiating insert operation");

		Integer insertMovies;
		try {
			insertMovies = jdbcService.insertMovies();
			log.info("‚úÖ Successfully inserted {} movie records into the database", insertMovies);
		} catch (Exception e) {
			log.error("‚ùå Error occurred while inserting movies: {}", e.getMessage(), e);
			return ResponseEntity.status(HttpStatus.INTERNAL_SERVER_ERROR)
					.body("Something went wrong while inserting movies.");
		}

		log.info("üé¨ [END] /insertMovie - returning response to client");
		return ResponseEntity.ok(insertMovies + " rows inserted");
	}
}
